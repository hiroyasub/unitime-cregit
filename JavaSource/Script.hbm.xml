<hibernate-mapping package="org.unitime.timetable.model">
    <class name="Script" table="script">
        <cache include="non-lazy" usage="nonstrict-read-write"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">pref_group_seq</param>
            </generator>
        </id>

        <property
            name="name"
            column="name"
            type="java.lang.String"
            not-null="true"
            length="128"/>
            
        <property
            name="description"
            column="description"
            type="java.lang.String"
            not-null="false"
            length="1024"/>
            
        <property
            name="engine"
            column="engine"
            type="java.lang.String"
            not-null="true"
            length="32"/>
        
        <property
            name="permission"
            column="permission"
            type="java.lang.String"
            not-null="false"
            length="128"/>

        <property
            name="script"
            column="script"
            type="java.lang.String"
            not-null="true"
            />

		<set
            name="parameters"
            cascade="all"
            inverse="true">

            <cache include="non-lazy" usage="read-write"/>
            <key column="script_id"/>
            <one-to-many class="ScriptParameter"/>
        </set>
    </class>
    
    <class name="ScriptParameter" table="script_parameter">
        <cache include="non-lazy" usage="nonstrict-read-write"/>
        
        <composite-id>
        	<key-many-to-one
        		name="script"
        		class="Script"
        		column="script_id"
        		foreign-key="fk_script_parameter"
        	/>
            <key-property
                name="name"
                column="name"
                type="java.lang.String"
                length="128"/>
        </composite-id>

        <property
            name="label"
            column="label"
            type="java.lang.String"
            not-null="false"
            length="256"/>

        <property
            name="type"
            column="type"
            type="java.lang.String"
            not-null="true"
            length="2048"/>

       	<property
            name="defaultValue"
            column="default_value"
            type="java.lang.String"
            not-null="false"
            length="2048"/>
   	</class>
</hibernate-mapping>